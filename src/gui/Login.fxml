<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="100.0" prefWidth="255.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="gui.LoginControlador" styleClass="login">

	<Label text="Seja Bem Vindo" 
		styleClass="login-titulo"
		GridPane.columnIndex="0" GridPane.rowIndex="0" />


	<Label text="E-mail: " 
		styleClass="login-form-label"
		GridPane.columnIndex="0" GridPane.rowIndex="1" />
	<TextField fx:id="campoEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" />


	<Label text="Senha: " 
		styleClass="login-form-label"
		GridPane.columnIndex="0" GridPane.rowIndex="2" />
	<PasswordField fx:id="campoSenha" GridPane.columnIndex="1" GridPane.rowIndex="2" />


	<Button text="Entrar" 
		styleClass="login-form-botao"
		GridPane.columnIndex="0" GridPane.rowIndex="3"
		onAction="#entrar">
	</Button>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>


</GridPane>
